---
import { config } from "@config";
import Navbar from "./Navbar.astro";
---

<header
  id="header"
  class="flex flex-col justify-between bg-inherit text-inherit w-full z-[1] relative"
>
  {
    config.header_images.enable && (
      <div
        class="relative bg-cover md:h-48 h-24"
        style={`background-image: url(${config.header_images.src});`}
      >
        <div
          class="absolute top-0 right-0 w-full h-[inherit] opacity-50
            text-gray-50 bg-gray-950"
        />
      </div>
    )
  }
  <Navbar />
</header>
