---
import { getAllPosts } from '@assets/ts/utils';
import FormattedDate from '@components/star/FormattedDate.astro';
import Card from './Card.astro';
import CardHeader from './CardHeader.astro';
import PostItem from './PostItem.astro';

const posts = await getAllPosts();
---

<Card>
  <CardHeader title='最近文章'>
    <span>
      <a href='/archives' class=''>查看全部</a>
    </span>
  </CardHeader>
  <div class='flex flex-col gap-2 divide-y divide-gray-500/30'>
    {posts.slice(0, 5).map((item) => <PostItem post={item} />)}
  </div>
</Card>
