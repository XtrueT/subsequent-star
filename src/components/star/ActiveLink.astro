---
const { href, class: className, ...props } = Astro.props;
const { pathname } = Astro.url;
const isActive =
  decodeURI(pathname) === '/'
    ? href === '/'
    : (decodeURI(pathname).includes(href) && href !== '/') ||
      (decodeURI(pathname).includes('tags') && href === '/archives');
---

<a
  href={href}
  class:list={[className, { 'text-primary-light dark:text-primary-dark': isActive }]}
  {...props}>
  <slot />
</a>
