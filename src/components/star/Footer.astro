    <div class='grid grid-cols-3 gap-1 sm:gap-8 sm:col-span-2 sm:grid-cols-3 text-xs sm:text-sm'>
      {
        siteLinks.map(({ name, links }) => (
          <nav class='flex flex-col items-center'>
            <p class='font-medium'>{name}</p>
            <ul class='flex flex-col mt-4 space-y-2'>
              {links.map((item) => (
                <li class='hover:text-primary-light'>
                  <a href={item.href} aria-label={item.title} target={item.target || '_self'}>
                    {item.title}
                  </a>
                </li>
              ))}
