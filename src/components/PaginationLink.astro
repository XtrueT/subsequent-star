---
type Props = {
  isActive?: boolean;
  href: string;
};

const { href, isActive = false } = Astro.props;
---

<li class="pagination-link">
  <a href={href} class:list={[{ active: isActive }]}>
    <slot />
  </a>
</li>

<style>
  .pagination-link a {
    @apply flex items-center justify-center px-4 py-2 mx-1 transition-all duration-300 transform rounded-md
                  bg-gray-50 dark:bg-gray-700 hover:bg-gray-300 hover:text-gray-50;
  }
  .pagination-link a.active {
    @apply hidden px-4 py-2 mx-1  transition-all duration-300 transform  rounded-md sm:inline pointer-events-none
                         bg-gray-300  dark:bg-gray-300  hover:bg-gray-300 hover:text-gray-50 dark:text-gray-900;;
  }
</style>
