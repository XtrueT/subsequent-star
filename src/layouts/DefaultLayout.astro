---
import Footer from "@components/Footer.astro";
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import LimitPostList from "@components/LimitPostList.astro";
import TagCloud from "@components/TagCloud.astro";
import { config } from "@config";
type Props = {
  title?: string;
  description?: string;
};
const { title = config.title, description = config.description } = Astro.props;
---

<!doctype html>
<html lang="zh-cn" class="flex flex-col justify-center items-center m-0 p-0">
  <head>
    <Head title={title} description={description} />
  </head>

  <body
    style="margin-right: calc(100% - 100vw)"
    class="flex flex-col flex-nowrap justify-between items-center
            h-full min-h-screen w-screen overflow-x-hidden
            px-3 lg:px-64 transition-all ease-in-out m-0
            bg-gray-200 text-gray-900 
            dark:text-gray-200 dark:bg-gray-800 "
  >
    <Header />

    <main
      class="flex flex-row justify-between items-start max-sm:flex-col bg-inherit text-inherit w-full my-4 "
    >
      <div
        class="flex flex-col justify-center items-center w-3/5 max-sm:w-full"
      >
        <slot />
      </div>
      <aside
        class="flex flex-col justify-center items-center w-2/5 max-sm:w-full p-12 "
      >
      <TagCloud/>
      <LimitPostList/>
        <slot name="siderbar" />
      </aside>
    </main>

    <Footer />
  </body>
</html>
